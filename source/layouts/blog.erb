<% wrap_layout :layout_blog do %>
  <%#= partial "partials/blog/header" %>

  <article class="post post--page<% unless current_article.data.type == 'post' %> post--update<% end %> h-entry">
    <a href="<%= current_article.url %>" class="u-url post__date">
      <time class="dt-published">
        <%= current_article.date.strftime('%b %e %Y') %>
      </time>
    </a>


    <h1 class="p-name">
      <% if current_article.data.link_url %>
        <a href="<%= current_article.data.link_url %>">
          <%= current_article.title %>
        </a>
      <% else %>
        <%= current_article.title %>
      <% end %>
    </h1>

    <div class="e-content"><%= yield %></div>
  </article>

  <%= partial "partials/blog/footer" %>
<% end %>
