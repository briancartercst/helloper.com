<% wrap_layout :layout_blog do %>
  <%= partial "partials/blog/header" %>

  <article class="post post--page<% unless current_article.data.type == 'post' %> post--update<% end %>">
    <time>
      <a href="<%= current_article.url %>"><%= current_article.date.strftime('%b %e %Y') %></a>
    </time>

    <h1>
      <% if current_article.data.link_url %>
        <a href="<%= current_article.data.link_url %>">
          <%= current_article.title %>
        </a>
      <% else %>
        <%= current_article.title %>
      <% end %>
    </h1>

    <%= yield %>
  </article>

  <%= partial "partials/blog/footer" %>
<% end %>
